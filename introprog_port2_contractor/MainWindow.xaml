<Window x:Class="introprog_port2_contractor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:introprog_port2_contractor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width ="1*" />
            <ColumnDefinition Width ="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>


        </Grid.RowDefinitions>
        <Button x:Name="GetContractor"  Click="GetContractor_Click" Content="Get contractor" HorizontalAlignment="Left" Height="100" Width="100" VerticalAlignment="Top" Grid.Column="0" Grid.Row="1" />
       
        <ListBox  x:Name="ContractorListbox"  Grid.Column="1"  Background="#de55de" Grid.RowSpan="3"/>


    </Grid>
</Window>
