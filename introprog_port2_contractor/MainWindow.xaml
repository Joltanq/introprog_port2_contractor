<Window x:Class="introprog_port2_contractor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:introprog_port2_contractor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <!-- Lays out the frame-->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Lays out panels for jobs and contractors-->
        
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" BorderBrush="Black" BorderThickness="2" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Contractor" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="10"/>
                    <TextBlock Text="First Name" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="10"/>
                    <TextBox x:Name="FirstName" Grid.Column="1" Grid.Row="1" BorderBrush="DarkBlue"/>
                    <TextBlock Text="Last Name" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="10"/>
                    <TextBox x:Name="LastName" Grid.Column="1" Grid.Row="2" BorderBrush="DarkBlue"/>
                    <TextBlock Text="Date of Birth" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="10"/>
                    <TextBox x:Name="DateOfBirth" Grid.Column="1" Grid.Row="3" BorderBrush="DarkBlue"/>
                    <TextBlock Text="Hourly Wage" Grid.Column="0" Grid.Row="4" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="10"/>
                    <TextBox x:Name="HourlyWage" Grid.Column="1" Grid.Row="4" BorderBrush="DarkBlue"/>

                    <UniformGrid Grid.Row="5" Grid.Column="0">
                    <Button x:Name="GetContractor"  Click="GetContractor_Click" Content="Get contractor" HorizontalAlignment="Left"    />
                    <Button x:Name="AddContractor" Click="AddContractor_Click" Content="Add contractor" HorizontalAlignment="Center"  />
                    <Button x:Name="RemoveContractor" Click="RemoveContractor_Click" Content="Remove contractor"   HorizontalAlignment="Right"/>
                    </UniformGrid>
                    
                    <!--
                --></Grid>


            </Border>
                
                
                
                <Border Grid.Column="1" BorderBrush="Black" BorderThickness="2" Margin="5">
                    <TextBlock Text="Jobs"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" />
                </Border>




            </Grid>
        
        <Grid Grid.Row="1">
            <Border Grid.Row="1" BorderBrush="Black" BorderThickness="2" Margin="5">
                <TextBlock Text="List of stuff"  HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="10"/>
            </Border>




        </Grid>
        





