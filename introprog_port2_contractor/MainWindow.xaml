<Window x:Class="introprog_port2_contractor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:introprog_port2_contractor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width ="1*" />
            <ColumnDefinition Width ="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>


        </Grid.RowDefinitions>
        <Button x:Name="GetContractor"  Click="GetContractor_Click" Content="Get contractor" HorizontalAlignment="Left" Height="100" Width="100" VerticalAlignment="Top" Grid.Column="0" Grid.Row="5" />
        <Button x:Name="AddContractor" Click="AddContractor_Click" Content="Add contractor" Grid.Column="0" Grid.Row="5" Width="100"/>
        <Button x:Name="RemoveContractor" Click="RemoveContractor_Click" Content="Remove contractor" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="5" Width="100"/>
        <Button x:Name="ShowJobs" Click="ShowJobs_Click" Content="Show Job" Grid.Column="2" Grid.Row="5"/>

        <TextBox x:Name="FirstName" Grid.Column="0" Grid.Row="0" BorderBrush="DarkBlue"/>
        <TextBox x:Name="LastName" Grid.Column="0" Grid.Row="1" BorderBrush="DarkBlue"/>
        <TextBox x:Name="DateOfBirth" Grid.Column="0" Grid.Row="2" BorderBrush="DarkBlue"/>
        <TextBox x:Name="HourlyWage" Grid.Column="0" Grid.Row="3" BorderBrush="DarkBlue"/>
        <ListBox  x:Name="ContractorListbox"  Grid.Column="1"  Background="#de55de" Grid.RowSpan="3"/>


    </Grid>
</Window>
